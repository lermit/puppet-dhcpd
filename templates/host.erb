  host <%= name %> {
    hardware ethernet <%= hwaddr %>;
    fixed-address <%= ip %>;
<% if $pxe_server != '' -%>
    next-server <%= pxe_server %>;
<% end -%>
<% if $pxe_file != '' -%>
    filename "<%= pxe_file %>";
<% end -%>

<% options.each do |key, value| -%>
    option <%= key %> <%= value %>;
<% end -%>
  }
